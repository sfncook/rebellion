<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/planet_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/planet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/upper_left"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintWidth_percent=".25"
        app:layout_constraintWidth_default="percent"

        app:layout_constraintHeight_percent=".25"
        app:layout_constraintHeight_default="percent"

        android:src="@drawable/planetloyaltyneutral"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/lower_left"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintWidth_percent=".25"
        app:layout_constraintWidth_default="percent"

        app:layout_constraintHeight_percent=".25"
        app:layout_constraintHeight_default="percent"

        android:src="@drawable/planetloyaltya"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/lower_right"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintWidth_percent=".25"
        app:layout_constraintWidth_default="percent"

        app:layout_constraintHeight_percent=".25"
        app:layout_constraintHeight_default="percent"

        android:src="@drawable/planetloyaltyb"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>