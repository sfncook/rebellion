<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/planet_status_label_loyalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loyalty"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/planet_status_planet_loyalty"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@+id/planet_status_label_loyalty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planet_status_text_loyalty_perc_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60%"
        android:textAlignment="center"
        android:textColor="@color/loyalty_team_a"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/planet_status_planet_loyalty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planet_status_text_loyalty_perc_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="40%"
        android:textAlignment="center"
        android:textColor="@color/loyalty_team_b"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/planet_status_text_loyalty_perc_team_a"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/planet_status_insurrection_civil_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/insurrection_rating_civil"
        app:layout_constraintEnd_toStartOf="@+id/planet_status_inconflict_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/planet_status_insurrection_unrest_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/insurrection_rating_unrest"
        app:layout_constraintEnd_toStartOf="@+id/planet_status_inconflict_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/planet_status_insurrection_uprising_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/insurrection_rating_uprising"
        app:layout_constraintEnd_toStartOf="@+id/planet_status_inconflict_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/planet_status_insurrection_rebellion_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/insurrection_rating_rebellion"
        app:layout_constraintEnd_toStartOf="@+id/planet_status_inconflict_img"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/planet_status_inconflict_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/conflict"
        app:tint="@color/insurrection_rating_rebellion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/planet_energy_imgs_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_status_label_loyalty" />
</androidx.constraintlayout.widget.ConstraintLayout>