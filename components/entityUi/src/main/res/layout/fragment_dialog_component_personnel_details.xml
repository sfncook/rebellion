<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >
    <LinearLayout
        android:id="@+id/dlgcom_personnel_detail_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/dlgcomp_personnel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personnel Type"
            />

        <LinearLayout
            android:id="@+id/dlgcomp_personnel_mission_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/dlgcomp_personnel_mission_type_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_type_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Mission:"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission Type"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlgcomp_personnel_mission_target_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_target_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Target:"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission Target"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlgcomp_personnel_mission_eta_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_eta_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Day Complete:"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/dlgcomp_personnel_mission_eta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/dlgcomp_personnel_mission_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Mission"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dlgcomp_personnel_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/personelle_garrison"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>