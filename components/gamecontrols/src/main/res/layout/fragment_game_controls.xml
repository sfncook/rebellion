<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SampleMainActivity">

    <data>
        <variable
            name="gameStateViewModel"
            type="com.rebllelionandroid.core.GameStateViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        >

        <TextView
            android:id="@+id/ctl_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:paddingLeft="5dp"
            android:text="@{`Day: ` + gameStateViewModel.gameStateLive.gameTime}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ctl_play_pause"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/ctl_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ctl_play"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ctl_time"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
