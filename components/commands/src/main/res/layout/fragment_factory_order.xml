<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/solid_border"
    >

    <TextView
        android:id="@+id/factmove_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order factory to build something:"
        app:layout_constraintBottom_toBottomOf="@+id/unit_cmd_close_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/factmove_close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#FF0000"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/factmove_btns_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="What to build?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/factmove_close_btn"
        />
    <LinearLayout
        android:id="@+id/factmove_btns_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/factmove_btns_label"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_constructionyard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="Construction Yard" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_shipyard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="Ship Yard" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_trainingfacility"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:text="Training Facility" />
    </LinearLayout>


    <TextView
        android:id="@+id/factmove_dest_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Where to deliver it?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/factmove_btns_container"
        />
    <ExpandableListView
        android:id="@+id/factmove_list_sector_and_planets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:childDivider="@color/list_item_bg"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/factmove_dest_label"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="79dp" />

</androidx.constraintlayout.widget.ConstraintLayout>