<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/solid_border"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/dlg_orders_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE TEXT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/dlg_orders_footer_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlg_orders_title_text">

        <fragment
            android:id="@+id/dlg_orders_ctoryard_build_component"
            android:name="com.rebellionandroid.components.commands.orderComponents.FactoryCtorYardBuildOrderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:tag="dlg_orders_ctoryard_build_component_tag" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dlg_orders_footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/dlg_orders_positive_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_margin="2dp"
            android:text="POSITIVE" />
        <Button
            android:id="@+id/dlg_orders_negative_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_margin="2dp"
            android:text="NEGATIVE" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>