<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/solid_border"
    >
    <TextView
        android:id="@+id/factmove_btns_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What to build?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/factmove_btns_ctoryard_col_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/factmove_btns_label"
        app:layout_constraintEnd_toStartOf="@+id/factmove_btns_ctoryard_col_2"
        app:layout_constraintStart_toStartOf="parent"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_constructionyard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Construction Yard" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_shipyard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Ship Yard" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_trainingfacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Training Facility" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/factmove_btns_ctoryard_col_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/factmove_btns_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/factmove_btns_ctoryard_col_1"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_orbitalbattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Orbital Battery" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/factmove_build_planetaryshield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Planetary Shield" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>