<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ship_move_planet_loyalty_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/energy_empty"
        app:layout_constraintTop_toTopOf="@+id/ship_move_planet_name"
        app:layout_constraintBottom_toBottomOf="@+id/ship_move_planet_energy_imgs_list"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/ship_move_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planet Name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ship_move_planet_loyalty_img"
        />
    <LinearLayout
        android:id="@+id/ship_move_planet_energy_imgs_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@+id/ship_move_planet_name"
        app:layout_constraintTop_toBottomOf="@+id/ship_move_planet_name" />
    <LinearLayout
        android:id="@+id/ship_move_planet_ship_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ship_move_planet_energy_imgs_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ship_move_planet_name"
        >
        <ImageView
            android:id="@+id/enemy_ships_in_sector_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ship_5"
            app:layout_constraintTop_toTopOf="@+id/many_ships_in_sector_txt"
            app:layout_constraintBottom_toBottomOf="@+id/many_ships_in_sector_txt"
            app:layout_constraintEnd_toStartOf="@+id/many_enemy_ships_in_sector_txt"
            />
        <TextView
            android:id="@+id/many_enemy_ships_in_sector_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/ships_in_sector_img"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageView
            android:id="@+id/ships_in_sector_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ship_5"
            app:layout_constraintTop_toTopOf="@+id/many_ships_in_sector_txt"
            app:layout_constraintBottom_toBottomOf="@+id/many_ships_in_sector_txt"
            app:layout_constraintEnd_toStartOf="@+id/many_ships_in_sector_txt"
            />
        <TextView
            android:id="@+id/many_ships_in_sector_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
